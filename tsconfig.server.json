{
    "compilerOptions": {
        "baseUrl": "server/",
        "target": "es2015",
        "module": "commonjs",
        "noEmit": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "server/**/*"
    ], 
    "exclude": [
        "node_modules"
    ]
}